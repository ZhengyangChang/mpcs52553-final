<style>
.form-signin {
  max-width: 380px;
  padding: 15px 35px 45px;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid rgba(0,0,0,0.1);  
}

</style>
  <div class="wrapper">
    <%= form_tag "/login", class: "form-signin" do %>      
      <h2 class="form-signin-heading">Sign In</h2>
      <%= label_tag "Email" %>
      <%= text_field_tag "email", "", autofocus: true, class: "form-control", placeholder: "Email Address" %>
      <%= label_tag "Password" %>
      <%= password_field_tag "password", "", class: "form-control", placeholder: "Password" %>
      <%= label_tag "" %>
      <%= submit_tag "Log In", class: 'btn btn-lg btn-primary btn-block' %>

      <%= label_tag "No account ? " %>

      <%= link_to "Sign Up", "/users/new" %>
    <% end %>
  </div>



