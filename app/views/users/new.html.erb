<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<style>

.input-groups.form-signin {
  max-width: 380px;
  padding: 15px 35px 45px;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid rgba(0,0,0,0.1);  
}

.required:after{
  content: "*";
  color: red;
}

.label.label-info.custom{
  margin: 20 auto;
}

</style>
  <div class="wrapper">
    <%= form_tag "/users", class: "input-groups form-signin" do %>      
      <h2 class="form-signin-heading">Sign Up</h2>
      <%= label_tag "", "Email", :class => "required" %>
      <%= text_field_tag "email", "", autofocus: true, :class => "form-control", placeholder: "Email Address", required: true %>
      <%= label_tag "", "Password", :class => "required"%>
      <%= password_field_tag "password", @user.password, :class => "form-control", placeholder: "Password", required: true %>

      <%= label_tag "Name" %>
      <%= text_field_tag "name", "", autofocus: true, :class => "form-control", placeholder: "Name" %>

      <%= label_tag "Phone Number" %>
      <%= text_field_tag "phone", "", autofocus: true, :class => "form-control", placeholder: "Phone" %>

      <%= label_tag "" , "Register As" %>
      <br>
      <%= content_tag :div, :class => "radio" do %>
      <%= radio_button_tag "type", 0, true %><%= label_tag "Renter" %>
      <% end %>

      <%= content_tag :div, :class => "radio" do %>
      <%= radio_button_tag "type", 1, false %><%= label_tag "Host" %>
      <% end %>

      <%= submit_tag "Sign Me Up", :class => 'btn btn-lg btn-primary btn-block' %>

      or

      <%= link_to "Cancel", "/houses" %>
    <% end %>
  </div>



